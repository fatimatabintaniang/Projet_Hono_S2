generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
    schemas = ["public"]
}

model User {
  id        Int       @id @default(autoincrement())
  prenom    String
  nom       String
  telephone String    @default("0000000000")
  email     String    @unique
  password  String
  image     String?
  createdAt DateTime  @default(now())
  role Role @default(ETUDIANT)

  historiqueLectures       HistoriqueLecture[]
  historiqueTelechargements HistoriqueTelechargement[]
  favoris                 Favori[]
  memoires                Memoire[]

   @@schema("public")
}


model LivreElectronique {
  id             Int      @id @default(autoincrement())
  titre          String
  auteur         String
  format         Format
  chemin_fichier String
  type           TypeLivre

  categorieId    Int
  niveauId       Int
  matiereId      Int

  categorie      Categorie   @relation(fields: [categorieId], references: [id])
  niveau         Niveau      @relation(fields: [niveauId], references: [id])
  matiere        Matiere     @relation(fields: [matiereId], references: [id])

  lectures       HistoriqueLecture[]
  telechargements HistoriqueTelechargement[]
  favoris        Favori[]

   @@schema("public")
}

model Categorie {
  id    Int    @id @default(autoincrement())
  nom   String  @unique

  livres LivreElectronique[]

   @@schema("public")
}

model Niveau {
  id     Int    @id @default(autoincrement())
  libelle String  @unique

  livres  LivreElectronique[]

   @@schema("public")
}

model Matiere {
  id          Int    @id @default(autoincrement())
  nom_matiere String  @unique

  livres      LivreElectronique[]

   @@schema("public")
}

model HistoriqueLecture {
  id        Int      @id @default(autoincrement())
  date_lecture DateTime

  userId    Int
  livreId   Int

  utilisateur User   @relation(fields: [userId], references: [id])
  livre        LivreElectronique @relation(fields: [livreId], references: [id])

   @@schema("public")
}

model HistoriqueTelechargement {
  id               Int      @id @default(autoincrement())
  date_telechargement DateTime  @default(now())

  userId           Int
  livreId          Int

  utilisateur      User   @relation(fields: [userId], references: [id])
  livre            LivreElectronique @relation(fields: [livreId], references: [id])

   @@schema("public")
}

model Favori {
  id        Int      @id @default(autoincrement())
  a_lire_plus_tard Boolean

  userId    Int
  livreId   Int

  utilisateur User   @relation(fields: [userId], references: [id])
  livre       LivreElectronique @relation(fields: [livreId], references: [id])

   @@schema("public")
}

model Memoire {
  id             Int      @id @default(autoincrement())
  titre          String
  auteur         String
  annee          Int
  specialite     String
  fichier_memoire String
  statut         StatutMemoire

  utilisateurId  Int
  utilisateur    User   @relation(fields: [utilisateurId], references: [id])

   @@schema("public")
}

enum Format{
  PDF
  EPUB
  DOCS

   @@schema("public")
}

enum TypeLivre {
 LIVRE_COURS
 MEMOIRE

  @@schema("public")
}

enum StatutMemoire {
  en_attente
  valide

   @@schema("public")
}

enum Role {
  ADMIN
  ENSEIGNANT
  ETUDIANT


   @@schema("public")
}
