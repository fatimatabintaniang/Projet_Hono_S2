generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  prenom    String
  nom       String
  adresse   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  products  Product[]
}


model Product {
  id        Int      @id @default(autoincrement())
  label     String
  price     Float
  quantity  Int
  imageUrl  String?
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


